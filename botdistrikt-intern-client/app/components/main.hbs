<style>
    #create-modal {
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: rgba(22, 22, 22, 0.5);
        /* complimenting your modal colors */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @media (max-width: 960px) {
        #create-modal {}
    }

    @media (min-width: 961px) {
        #create-modal {
            top: 32px;
            margin: 0 auto;
        }
    }

    .modal-content {
        background-color: white;
        border-radius: 0.5rem;
        /* 8px */
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        width: 75%;
    }

    .modal-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
        /* 16px */
        border-bottom: 1px rgb(209 213 219) solid;
        border-top-left-radius: 0.25rem;
        /* 4px */
        border-top-right-radius: 0.25rem;
        /* 4px */
    }

    .close-modal {
        color: rgb(156 163 175);
        background-color: black;
        border-radius: 0.5rem;
        /* 8px */
        font-size: medium;
        width: 2rem;
        /* 32px */
        height: 2rem;
        margin-inline-start: auto;
        display: inline-flex;
        justify-content: center;
        align-items: center;
    }

    .close-modal:hover {
        background-color: rgb(229 231 235);
        color: rgb(17 24 39);
    }

    .icon-close-modal {
        width: 0.75rem;
        /* 12px */
        height: 0.75rem;
    }

    .modal-body {
        padding: 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-grid {
        margin-bottom: 1rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    input,
    select,
    textarea {
        background-color: rgb(249 250 251);
        border: 2px solid rgb(209 213 219);
        color: rgb(17 24 39);
        font-size: 0.875rem;
        /* 14px */
        line-height: 1.25rem;
        /* 20px */
        border-radius: 0.5rem;
        /* 8px */
        ;
        display: block;
        width: 100%;
        padding: 0.625rem;
        /* 10px */
    }

    .col-span-2 {
        width: 75%;
    }

    h3 {
        font-size: large;
        font-weight: 600;
        color: rgb(17 24 39);
    }

    label {
        display: block;
        margin-bottom: 2;
        font-size: 0.875rem;
        /* 14px */
        line-height: 1.25rem;
        /* 20px */
        color: rgb(17 24 39);
    }

    .submit-button-icon {
        margin-inline-start: 0.25rem;
        /* 4px */
        margin-inline-end: 0.25rem;
        width: 1.25rem;
        height: 1.25rem;
        /* 20px */
    }

    .submit-button {
        color: white;
        display: inline-flex;
        align-items: center;
        background-color: rgb(29 78 216);
        border-radius: 0.5rem;
        /* 8px */
        ;
        font-size: 0.875rem;
        /* 14px */
        line-height: 1.25rem;
        /* 20px */
        text-align: center;
        border: none;
        margin: 6px 0px;
        padding: 0.625rem;
    }

    .submit-button:hover {
        background-color: rgb(30 64 175);
    }
</style>
<div id="create-modal">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Modal header -->
        <div class="modal-header">
            <h3 class="modal-head">
                Add New Author
            </h3>
            <button type="button" class="close-modal" {{on "click" this.closeModal}}>
                {{!-- <svg class="icon-close-modal" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg> --}}
                X
                {{!-- <span class="sr-only">Close modal</span> --}}
            </button>
        </div>
        <div style="margin-top: 24px; margin-bottom:24px;">
            <!-- Modal body -->
            <form class="modal-body" {{on 'submit' this.postAuthor}}>
                <div class="modal-grid">
                    <div class="col-span-2">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" placeholder="Enter author's name" required="">
                    </div>
                    <button type="submit" class="submit-button">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>